<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>Thruk Monitoring Webinterface</title>
    [% PROCESS _favicon.tt %]
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    [% PROCESS _common_css.tt %]
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    [% PROCESS _common_js_files.tt %]
  </head>
  <body class='loginpage w-screen h-screen flex justify-center items-center'>
    [% PROCESS _common_js.tt %]
    [% IF ssi_header; ssi_header | evaltt; END %]
    [% PROCESS _header_broadcast.tt %]
    [% PROCESS _message.tt %]

    <form method="POST" action="login.cgi" class="w-fit h-fit">
      <div class="w-[300px] card rounded shadow-float p-8 flexcol flex-nowrap gap-y-0 loginmask">
        <a href="[% c.config.home_link %]" target="_blank"><img src="[% url_prefix %]themes/[% theme %]/images/logo_thruk.png" alt="Thruk" title="Thruk"></a>
        <input type="hidden" name="referer" value="" id="referer">
        [% IF c.config.basic_auth_enabled %]
          <input type="text" name="login" placeholder="User" id="loginuser"[% IF !c.config.basic_auth_enabled || c.config.auth_oauth.provider.size == 0 %] required[% END %] class="w-full text-lg silent mt-2" />
          <div class="togglePassword relative mt-2">
            <input type="password" name="password" placeholder="Password"[% IF !c.config.basic_auth_enabled || c.config.auth_oauth.provider.size == 0 %] required[% END %] class="w-full text-lg silent" />
            <i class="uil uil-eye-slash absolute z-10 right-0 top-0 mr-2 my-1.5 opacity-50 text-lg togglePassword"></i>
          </div>
          <button class="text-lg font-semibold mt-2 spinner">Sign in</button>
        [% END %]
        [% IF c.config.basic_auth_enabled || c.config.auth_oauth.provider.size > 0 %]
          [% FOREACH auth = c.config.auth_oauth.provider %]
            [% IF c.config.basic_auth_enabled || !loop.first %]
            <div class="text-center pt-2">or</div>
            [% END %]
            <button class="text-lg font-semibold mt-2 spinner" name="oauth" value="[% loop.index %]">[% IF auth.defined("login") %][% auth.login %][% ELSE %]Login with OAuth[% END %]</button>
          [% END %]
        [% END %]
        <div class="mt-2 font-semibold whitespace-nowrap">
          <a class="link text-sm" href="https://www.thruk.org/" target="_blank">
            Version [% thrukversion %]
          </a>
          [% IF c.config.extra_version %]
            <a class="link text-xs" href='[% c.config.extra_version_link %]' target='_blank'>[% c.config.extra_version %]</a>
          [% END %]
        </div>
      </div>
    </form>

    [% IF ssi_footer; ssi_footer | evaltt; END %]
  </body>
</html>