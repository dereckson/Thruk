<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html[% IF extrahtmlclass %] class="[% extrahtmlclass | html %] h-full w-full overflow-hidden"[% END %]>
  <head>
    <title>[% title_prefix %][% escape_html(title) %]</title>
    [% PROCESS _favicon.tt %]
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    [%- SET page = 'status' IF page == '' -%]
    [%- PROCESS _common_css.tt %]
    [%- PROCESS _common_js_files.tt -%]
    [%- PROCESS extra_headers.tt -%]
    [%- IF extra_header %][% extra_header %][% END -%]
    [%- IF c.config.useragentcompat %]<meta http-equiv="X-UA-Compatible" content="[% c.config.useragentcompat %]">[% END -%]
  </head>

  <!-- Produced by Thruk (http://www.thruk.org).
      Copyright (c) 2009-present Thruk Developer Team.
  -->
  <body class="h-screen w-screen overflow-hidden [% page %][% IF real_page %] page_[% real_page | html +%][%+ END %][% IF extrabodyclass +%] [%+ extrabodyclass | html %][% END %][% IF iframed %] iframed[% END %]" id='[% page %]'>
  [% PROCESS _common_js.tt %]
  [% IF ssi_header; ssi_header | evaltt; END %]
  <div style="display:none;" id="search-results"></div>

  <div class="flexrow flex-nowrap gap-0 h-screen w-screen overflow-hidden">
    <div id="navbar" class="navbar w-fit h-screen z-50 lg:mt-0 mt-[50px] lg:block hidden lg:relative absolute">
      [% PROCESS side.tt %]
    </div>

    <div class="flexcol gap-0 flex-grow w-0 h-screen" id="mainframe">
    [% IF minimal == 2 %]
      <header class="header">
        <div class="h-[50px] flexrow flex-nowrap items-center">
          [% IF c.user_exists %][% PROCESS _header_sites.tt %][% END %]
        </div>
      </header>
    [% END %]
    [% UNLESS minimal %]
      <header class="header">
        <div class="h-[50px] flexrow flex-nowrap items-center">
          <button class="big iconOnly w-10 h-10 ml-[-10px] block lg:hidden hoverable" onclick="toggleElement('navbar', null, true, null, checkNavBackground); checkNavBackground(); return false;"><i class="fa-solid fa-bars"></i></button>
          <div class="flex-grow h-min">
            [% IF c.user_exists %][% PROCESS _header_sites.tt %][% END %]
          </div>
          [% PROCESS _header_broadcast.tt %]

          <div class="flexrow w-fit gap-2 flex-nowrap">
            <div class="w-fit" id="bug_report" style="display: none;">
              [% IF show_error_reports %]
                <button class="noprint big red round" id="bug_report-btnEl"><i class="uil uil-thunderstorm"></i></button>
              [% END %]
            </div>
            <button class="noprint big primary round" title="reload page" id="refresh_button" onClick="refresh_button()"><i class="uil uil-sync"></i></button>
            [% IF c.user_exists %]
              <button class="noprint big primary round"  title="user preferences" onClick="toggleElementRemote('pref_pane', '_header_prefs', true); return false;"><i class="uil uil-cog"></i></button>
              <div id="pref_pane" class="card z-50 shadow-float fixed right-0 top-[50px] mt-0 min-h-[150px] w-[500px] rounded-t-none rounded-r-none" style="display: none;"></div>
              [% IF cookie_auth && show_logout_button %]
                <form action="[% url_prefix %]cgi-bin/login.cgi?logout" method='POST' target='_top' style="display: initial;">
                  <button class="noprint big primary round" title="sign out"><i class="uil uil-signout"></i></button>
                </form>
              [% END %]
            [% END %]
          </div>
        </div>
      </header>
    [% END %]
<main class="relative p-5 flex-grow scrollauto">
[% IF show_top_pane %]
  <button class="iconOnly noprint big absolute p-0 m-0 top-7 right-7" [% IF hidetop != 1 %]style="display: none;"[% END %] onClick="toggleTopPane(); return false;" id="btn_toggle_top_pane"><i class="uil uil-arrow-to-bottom m-0"></i></button>
[% END %]