[% icon = 'fa-solid fa-file-pdf' %]
[% IF    r.var.ctype == 'html2pdf'              %][% icon = 'fa-solid fa-file-pdf' %]
[% ELSIF r.var.ctype == 'application/x-msexcel' %][% icon = 'fa-solid fa-file-excel' %]
[% ELSIF r.var.ctype == 'application/pdf'       %][% icon = 'fa-solid fa-file-pdf' %]
[% ELSIF r.var.ctype == 'text/html'             %][% icon = 'fa-solid fa-file-lines' %]
[% ELSIF r.var.ctype == 'image/png'             %][% icon = 'fa-solid fa-file-image' %]
[% ELSIF r.var.ctype != ''                      %][% icon = 'fa-solid fa-file-lines' %]
[% END %]